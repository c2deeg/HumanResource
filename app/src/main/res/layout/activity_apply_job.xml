<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Activities.ApplyJobActivity.ApplyJobActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/arrowback"
            app:tint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sfprodisplaybold"
            android:gravity="center"
            android:text="Job Apply"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/sfpromedium"
                        android:text="First Name"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/sfpromedium"
                        android:text="Last Name"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/et_firstname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/stroke_roundcorner"
                        android:fontFamily="@font/sfpromedium"
                        android:gravity="center"
                        android:hint="Adom"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="#DADADA"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/et_lastname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/stroke_roundcorner"
                        android:fontFamily="@font/sfpromedium"
                        android:gravity="center"
                        android:hint="Shafi"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="#DADADA"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/sfpromedium"
                        android:text="Your Email"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/et_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/stroke_roundcorner"
                        android:drawablePadding="20dp"
                        android:hint="hello@gmail.com"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="#DED7D7"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/sfpromedium"
                        android:text="Country"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                    <com.hbb20.CountryCodePicker
                        android:id="@+id/countrycodepicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ccp_showFullName="true"
                        app:ccp_showPhoneCode="false"
                        app:ccpDialog_showNameCode="false"
                        android:layout_marginTop="5dp"
                        app:ccp_showFlag="true"
                        app:ccp_textGravity="LEFT"
                        android:padding="5dp"
                        android:background="@drawable/stroke_roundcorner"
                        app:ccp_arrowColor="@color/white"
                        app:ccpDialog_textColor="@color/white"
                        app:ccp_contentColor="@color/white"
                        app:ccp_showNameCode="false"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/sfpromedium"
                        android:text="Describe Yourself"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/et_describeyourself"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/stroke_roundcorner"
                        android:textColor="@color/white"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:padding="10dp"
                        android:textColorHint="#DED7D7"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/sfpromedium"
                        android:text="Cv/Resume"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="50dp"
                        android:background="@drawable/stroke_roundcorner"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_uploadprofile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Upload Here"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/img_uploadfile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/uploadimage" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_applynow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/appgoldenbackground"
                        android:text="Apply Now"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>