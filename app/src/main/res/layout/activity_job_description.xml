<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Activities.JobDescriptionActivity.JobDescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_jobdeatils"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/roundcorner2"
            android:gravity="center"
            android:padding="5dp"
            android:text="Job Details"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_jobdescription"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/roundcorner2"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Job Description"
            android:textColor="@color/appgoldencolor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_companyDetails"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/roundcorner2"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Company Details"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/sfpromedium"
                        android:text="First Name"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/sfpromedium"
                        android:text="Last Name"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/et_firstname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.4"
                        android:text="dsdsadsa"
                        android:background="@drawable/stroke_roundcorner"
                        android:fontFamily="@font/sfpromedium"
                        android:gravity="center"
                        android:hint="Adom"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="#DADADA"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/et_lastname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/stroke_roundcorner"
                        android:fontFamily="@font/sfpromedium"
                        android:gravity="center"
                        android:hint="Shafi"
                        android:text="dsdsadsa"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="#DADADA"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/sfpromedium"
                        android:text="Your Email"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/et_personmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/stroke_roundcorner"
                        android:drawablePadding="20dp"
                        android:hint="hello@gmail.com"
                        android:text="hello@gmail.com"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="#DED7D7"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/sfpromedium"
                        android:text="Country"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/stroke_roundcorner"
                        android:padding="5dp"
                        app:ccpDialog_showNameCode="false"
                        app:ccpDialog_textColor="@color/white"
                        app:ccp_arrowColor="@color/white"
                        app:ccp_contentColor="@color/white"
                        app:ccp_showFlag="true"
                        app:ccp_showFullName="true"
                        app:ccp_showNameCode="false"
                        app:ccp_showPhoneCode="false"
                        app:ccp_textGravity="LEFT"
                        app:cp_initialSelectionMode="empty"
                       />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/sfpromedium"
                        android:text="Scope of work"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/et_scopework"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/stroke_roundcorner"
                        android:drawablePadding="20dp"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:text="dsdsadsa"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="#DED7D7"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/sfpromedium"
                        android:text="Plain of Action"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/et_plainofaction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/stroke_roundcorner"
                        android:drawablePadding="20dp"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:text="dsdsadsa"
                        android:textColor="@color/white"
                        android:textColorHint="#DED7D7"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/sfpromedium"
                        android:text="Construction Documentation"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="50dp"
                        android:background="@drawable/stroke_roundcorner"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_uploadhere"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Upload Here"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/img_uploadfile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/uploadimage" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>