<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightgray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_technologytittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graphic Designer"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/sfprodisplaybold"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_companyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Los Angles California"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_applieddate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Applied on 2 May,2022"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_statusaboutselection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/roundcorner2"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:backgroundTint="@color/white"
        android:textColor="#009429"
        android:text="Selceted"
        android:textSize="18sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightgray" />
</LinearLayout>